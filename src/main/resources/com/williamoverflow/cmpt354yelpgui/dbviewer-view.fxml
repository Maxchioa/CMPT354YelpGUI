<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.controlsfx.control.tableview2.TableView2?>
<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.williamoverflow.cmpt354yelpgui.DBViewerController">

    <SplitPane dividerPositions="0.5" orientation="HORIZONTAL">
        <SplitPane dividerPositions="0.5" maxWidth="350.0" minWidth="350.0" orientation="VERTICAL" prefWidth="350.0">
            <TabPane fx:id="funcTabPane">

            </TabPane>
            <AnchorPane>
                <TextArea fx:id="finSqlStrTxt" prefHeight="320.0" prefWidth="300.0" />
            </AnchorPane>
        </SplitPane>
        <SplitPane dividerPositions="0.5" maxWidth="850.0" minWidth="850.0" orientation="VERTICAL">
            <SplitPane dividerPositions="0.5" orientation="HORIZONTAL">
                <GridPane hgap="20" vgap="20">
                    <TextArea editable="false" prefHeight="150.0" />
                    <Button fx:id="applyBtn" prefWidth="90.0" text="APPLY" onMouseClicked="#onApplyClick" GridPane.rowIndex="1" />
                    <Button fx:id="resetBtn" prefWidth="90.0" text="RESET" GridPane.rowIndex="2" />
               <columnConstraints>
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" />
               </rowConstraints>

                </GridPane>
                <AnchorPane>
                    <TextArea fx:id="statTxt" editable="false" />
                </AnchorPane>
            </SplitPane>


            <TableView fx:id="displayTableView">

            </TableView>

        </SplitPane>


    </SplitPane>
</AnchorPane>
