        <VBox>
            <!-- TabPane for Filter Methods -->
            <TabPane fx:id="filterTabPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tabMaxHeight="0.0" tabMaxWidth="0.0">

            </TabPane>

        </VBox>

        <!-- Right Side: Error Message Display -->
